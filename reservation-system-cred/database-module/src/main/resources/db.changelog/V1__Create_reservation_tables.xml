<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="reservation-system">
        <comment>Create tickets table for storing booking information</comment>
        <createTable tableName="tickets">
            <column name="ticket_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="pnr_number" type="VARCHAR(10)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="booking_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="booking_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="payment_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="total_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="booking_details" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="reservation-system">
        <comment>Create payment_transactions table</comment>
        <createTable tableName="payment_transactions">
            <column name="transaction_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ticket_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="payment_method" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="gateway_transaction_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="gateway_response" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
