# Development Dockerfile with hot reload support
FROM openjdk:17-jdk-slim

# Install curl and other development tools
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy Maven wrapper and pom files
COPY .mvn/ .mvn/
COPY mvnw pom.xml ./
COPY database-module/pom.xml ./database-module/
COPY travel-search-service/pom.xml ./travel-search-service/

# Download dependencies
RUN ./mvnw dependency:go-offline -B

# Copy source code
COPY database-module/src ./database-module/src/
COPY travel-search-service/src ./travel-search-service/src/

# Build the application
RUN ./mvnw clean package -DskipTests -B

# Create logs directory
RUN mkdir -p /app/logs

# Expose ports (app + debug)
EXPOSE 8080 8081 5005

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/actuator/health || exit 1

# Run with debug enabled
ENTRYPOINT ["java", "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005", "-jar", "/app/travel-search-service/target/travel-search-service-0.0.1-SNAPSHOT.jar"]
